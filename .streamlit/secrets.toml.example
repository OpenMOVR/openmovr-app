# Example Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to git!

# ===================================================
# DUA Access Key (for protected pages)
# ===================================================
OPENMOVR_SITE_KEY = "your-access-key-here"

# ===================================================
# AWS S3 Configuration (Optional - for scalable data storage)
# ===================================================
[aws]
access_key_id = "AKIA..."
secret_access_key = "your-aws-secret-key"
region = "us-east-1"

[s3]
bucket_name = "movr-clinical-data"
data_prefix = "parquet/"  # Folder path within bucket

# ===================================================
# Feature Flags (Optional - for gradual rollout)
# ===================================================
[features]
use_s3 = true  # Set to false to use local files only
enable_exports = true
enable_site_analytics = true
